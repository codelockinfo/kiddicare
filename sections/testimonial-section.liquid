<style>

  .Main-testimonial-section {
    padding: 30px 0 50px;
    background-color: {{section.settings.background}};
}
  .Testimonial-sections{
    max-width: 1200px;
    width: 100%;
    margin: auto;
  }
  .Main-test-block{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: space-between;
  }
  .testimonial-block{
    width: 33.33%;
    padding: 0 15px;
  }
  .Testimonial-sections header.head {
    margin-bottom: 5%;
}
  .Main-testimonial-section .head h2.heading {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 62px;
    line-height: 70px;
    text-align: center;
    color: #006781;
    margin: 0;
    letter-spacing: normal;
}
  .testimonial-block img {
    width: 100%;
    margin: 15px 0;
}
  .review-rating {
    text-align: center;
    margin: 15px 0;
}
  .review-rating span.checked {
    color: #FFB800;
}
  .review-rating span {
    color: #FFf;
}
  .review-rating span.review-cls{
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 500;
    font-size: 15px;
    line-height: 20px;
    text-align: center;
    color: #737373;
  }
  .testimonial-contant h2.title {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 800;
    font-size: 20px;
    line-height: 25px;
    text-align: center;
    color: #006781;
    margin: 0;
}
  .testimonial-contant h2.heading {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 800;
    font-size: 15px;
    line-height: 20px;
    text-align: center;
    color: #006781;
    margin-bottom: 10px;
}
  .testimonial-contant p.text {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 400;
    font-size: 15px;
    line-height: 20px;
    text-align: center;
    color: #006781;
}
  .drag i {
    font-size: 27px;
    color: #fff;
    font-weight: 100;
    display: inline;
    background-color: #006781;
    padding: 10px;
    border-radius: 50%;
}
  .Main-test-block .slick-prev:before {
    content: "";
}
  .Main-test-block .slick-next:before {
    content: "";
}
  .Main-test-block .slick-prev {
    left: -50px;
}
  .Main-test-block .slick-prev, .Main-test-block .slick-next {
    top: 40%;
    z-index: 9;
}
  .Main-test-block ul.slick-dots {
    margin: auto;
}
  .Main-test-block .slick-dots li button:before, .Main-test-block .slick-dots li a:before {
    font-size: 50px;
}

  @media(max-width:1300px){
    .Main-test-block .slick-prev {
    left: 15px;
}
    .Main-test-block .slick-next {
    right: 40px;
}
  }
  @media(max-width: 768px){
    .Main-testimonial-section .head h2.heading {
    font-size: 35px;
    line-height: 40px;
}
    .testimonial-contant h2.title {
    font-size: 18px;
    line-height: 23px;
}
    .testimonial-contant p.text {
    font-size: 14px;
    line-height: 19px;
    padding: 0 10px;
}
    .Main-testimonial-section {
    padding: 0px 0;
}
    .Testimonial-sections header.head {
    margin-bottom: 2%;
}
  }
  @media(max-width:500px){
    .testimonial-block {
    padding: 0 ;
}
  }
  
  
</style>

