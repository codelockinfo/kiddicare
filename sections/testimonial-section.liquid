<div class="Main-testimonial-section" id="{{ section.id }}">
  <div class="Testimonial-sections">
    <header class="head">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <p class="text">{{ section.settings.text }}</p>
    </header>
    <div class="Main-test-block testi-slider">
      {% for block in section.blocks %}
        <div class="testimonial-block">
          <img src="{{ block.settings.image | img_url: 'master' }}">
          <div class="testimonial-contant">
            <h2 class="title">{{ block.settings.title }}</h2>
            <div class="review-rating">
              {% if block.settings.rating == 5 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% endif %}
              {% if block.settings.rating == 4 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 3 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 2 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 1 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              <span class="review-cls">( {{ block.settings.review }} )</span>
            </div>
            <h2 class="heading">{{ block.settings.heading }}</h2>
            <p class="text">{{ block.settings.text }}</p>
          </div>
        </div>
        {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Testimonial Section ",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "text",
        "type" : "textarea",
        "label" : "Text"
      },
      {
        "id" : "background",
        "type" : "color",
        "label": "Background Color",
        "default" : "#7CD6DB"
      }
    ],
    "blocks" : [
      {
        "name" : "block",
        "type" : "block",
        "settings" : [
          {
            "id" : "image",
            "type" : "image_picker",
            "label" : "Image"
          },
          {
            "id" : "title",
            "type" : "text",
            "label" : "Name"
          },
          {
            "type": "range",
            "id": "rating",
            "min": 1,
            "max": 5,
            "step": 1,
            "label": "Rating",
            "default": 5
          },
          {
            "id" : "review",
            "type" : "text",
            "label" : "Review"
          },
          {
            "id" : "heading",
            "type" : "text",
            "label" : "Heading"
          },
          {
            "id" : "text",
            "type" : "textarea",
            "label" : "Text"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Testimonial Sections"
      }
    ]
  }
{% endschema %}

