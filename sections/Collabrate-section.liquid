<div class="Main-Collabrate-section" id="{{ section.id }}">
  <div class="Collabrate-sections">
    <div class="flex-Collabrate">
      <div class="image-sect width-Collabrate">
        <img src="{{ section.settings.image | img_url:'master' }}">
      </div>
      <div class="width-Collabrate contant-Collabrate">
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <p class="text">{{ section.settings.text }}</p>
        <div class="button-sect">
          <a href="{{ section.settings.btn-link }}">{{ section.settings.btn-name }}</a>
        </div>
      </div>
    </div>
  </div>"
</div>

{% schema %}
  {
    "name": "Collabrate Section",
    "settings": [
      {
        "id" : "image",
        "type" : "image_picker",
        "label" : "Image"
      },
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "text",
        "type" : "textarea",
        "label" : "Text"
      },
      {
        "id" : "btn-name",
        "type" : "text",
        "label" : "Button"
      },
      {
        "id" : "btn-link",
        "type" : "url",
        "label" : "Button Link"
      },
      {
        "id" : "background",
        "type" : "color",
        "label" : "Background color",
        "default" : "#7CD6DB"
      }
    ],
    "presets" : [
      {
        "name" : "Collabrate Section"
      }
    ]
  }
{% endschema %}

<style>

  .Main-Collabrate-section{
    background-color: {{section.settings.background}};
  }
  .flex-Collabrate{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    align-items:center;
  }
  .width-Collabrate"{
    width: 50%;
  }
  .button-sect a {
    color: #fff;
    width: 48%;
    border: 1px solid #fff;
    border-radius: 50px;
    padding: 5px 10px;
    text-align: center;
    margin: 3% 0;
}
</style>