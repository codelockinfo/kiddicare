 <link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
<div class="reddempoint">
<div class="earnkiddipoint">
  <div class="earncontainer">
    <div class="earn_type">
      <div class="earntypetext">
        <div class="earntypetext1">
          {% if section.settings.kom!= blank %}
          <div class="earntypetextcontain">
          <img src="{{section.settings.kom | img_url:'master'}}" class="komeimage">
          </div>
          {% endif %}
        </div>
         <div class="earntypetext2">
           <h2 class="kidpoint">{{section.settings.kiddpoint}}</h2>
           <p class="methodpont">{{section.settings.methodpoint}}</p>
           <div class="earntypetextcontain">
           {% for block in section.blocks %}
              {%- case block.type -%}
              {%- when 'heading' -%}
             <div class="kiddititle">
               <h3 class="placetitle">{{block.settings.title}}</h3>              
                 </div>
                   {%- when 'disciption' -%}
               <div class="kiddiscription">
               <p class="placedic">{{block.settings.discript}}</p>                           
             </div>
             {% endcase %}
             {% endfor %}
           </div>
               <div class="button-videosign">
          <button class="signtitle"> <a href="{{section.settings.signurl}}" class="btn-link">{{section.settings.signbtn}}</a> </button>
        </div>
        </div>
      </div>
    </div>
  </div>

</div>  
</div>
<style>
  .reddempoint .earnkiddipoint{  	
    padding-top: 7%;
        padding-bottom: 7%;
  }
  .earnkiddipoint {
    background: #E5E5E5;
        padding-top: 3%;
  }
  .earncontainer{
  	    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    padding: 0px 20px ;
  }
  .earntypetext{
  	display: flex;
    flex-wrap: wrap;
    justify-content:space-between;
    align-items:center;
  }
  .earntypetext1{
  	flex: 0 0 50%;
    max-width: 45%;
  }
  .earntypetext2{
  	flex: 0 0 50%;
    max-width: 50%;
  }
  .kidpoint {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 80px;
    line-height: 80px;
    letter-spacing: 0;
    width:80%;
  }
  .methodpont {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 600;
    font-size: 20px;
    line-height: 28px;
    color: #006781;
    margin-top:38px;
  }
  .placetitle {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
    line-height: 36px;
    color: #006781;
    margin-bottom:10px;
  }
  .placedic {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 28px;
    color: #000000;
    width:85%;
  }
  .komeimage{
    max-width: 100%;
    border: 0;
    width: 100%;
  }
  .reddempoint .earntypetext{
  flex-direction: row-reverse;
  }
  .signtitle {
    background: #ea8282;
    border-radius: 50px;
    border: none;
   padding: 0px 70px 12px;
}
  .signtitle .btn-link {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
    line-height: 42px;
    text-align: center;
    color: #fff;
    background: #ea8282;
    text-transform: uppercase;
    letter-spacing: 2px;
}
  .button-videosign {
    margin-top: 46px;
}
