<div class="Main-Sizeing-section" id="{{ section.id }}">
  <div class="Size-guide-section">
    <div class="All-flexes">
      {% if section.settings.image1 != blank %}
      <div class="first-image flexes-block">
        <img src="{{ section.settings.image1 | img_url:'master' }}">
      </div>
      {% endif %}
      <div class="other-content head-section">
        <div class="mobile-image-with-content">
          {% if section.settings.image2 != blank %}
          <div class="only-mobile">
            <img src="{{ section.settings.mobile_image |img_url:'master' }}">
          </div>
            {% endif %}
          <div class="main-cls-cls">
             <div class="button-cls">
                 <a href="{{ block.settings.kome}}">
               <h2 class="heading">{{ section.settings.heading }}</h2>
                 </a>
             </div>
              <a class="btn-cls" href="{{ section.settings.button_link }}">{{ section.settings.button_name }}<i class="fa fa-arrow-circle-o-right" style="color:#fff"></i></a>
          </div>
        </div>
      </div>
      {% if section.settings.image3 != blank %}
      <div class="third-image flexes-block">
        <img src="{{ section.settings.image3 | img_url:'master' }}">
      </div>
        {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Kidding Size Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
                   {
        "id" : "kome",
        "type" : "url",
        "label" : "URl"
      },
      {
        "id" : "button_name",
        "type" : "text",
        "label" : "Button"
      },
      {
        "id" : "button_link",
        "type" : "url",
        "label" : "Button Link"
      },
      {
        "id" : "image1",
        "type" : "image_picker",
        "label" : "Image"
      },
      {
        "id" : "image3",
        "type" : "image_picker",
        "label" : "Image"
      },
      {
        "id" : "mobile_image",
        "type" : "image_picker",
        "label" : "Mobile Image"
      },
      {
        "id" : "background",
        "type" : "color",
        "label" : "Background Color",
        "default" : "#F3F3F3"
      },
      {
        "id" : "mobile-background",
        "type" : "color",
        "label" : "Mobile Background Color",
        "default" : "#84DADE"
      }
  
    ],
    "presets" : [
      {
        "name" : "Kidding Size Section"
      }
    ]
  }
{% endschema %}

<style>

  #{{section.id}}.Main-Sizeing-section{
    background-color: {{section.settings.background}};
  }
  .Size-guide-section {
    max-width: 100%;
    width: 100%;
    margin: auto;
    padding: 50px 0;
    overflow: hidden;
}
  .All-flexes{
    display: flex;
    width: 100%;
        justify-content: space-between;
    align-items: self-end;
        position: relative;
  }
  .first-image {
    left: 0;
}
  .third-image {
    right: 0;
}
  .All-flexes .flexes-block {
    position: absolute;
    top: -85px;
    height: 100%;
    z-index: 99;
}
  .All-flexes .flexes-block img {
    width: 100%;
    max-width: 300px;
}
  .head-section {
    width: 85%;
    margin: auto;
    text-align: center;
    background: #F48F89;
    padding: 25px 0;
    z-index: 9;
}
  .button-cls {
    background: #F48F89;
    border-radius: 15px;
    padding: 10px 0;
    margin-bottom: 15px;
}
  .button-cls h2.heading {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 700;
    font-size: 40px;
    line-height: 45px;
    text-align: center;
    letter-spacing: 1px;
    text-transform: capitalize;
    color: #FFFFFF;
    margin: 0;
}
  .head-section a {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 700;
    font-size: 30px;
    line-height: 35px;
    text-align: center;
    text-transform: capitalize;
    color: #006781;
}
  .only-mobile img{
    width: 85%;
  }
  .only-mobile{
    display: none;
  }
  @media(max-width: 768px){
    #{{section.id}}.Main-Sizeing-section{
    background-color: {{section.settings.mobile-background}};
  }
    .main-cls-cls a.btn-cls{
      display: none;
    }
    .only-mobile{
      display: block;
    }
    .All-flexes .flexes-block{
      display: none;
    }
    .head-section {
    width: 100%;
    text-align: center;
}
    .main-cls-cls{
      margin-top: -20px;
    }
    .Size-guide-section {
    padding: 5% 2%;
}
    .button-cls h2.heading {
    color: #F48F89;
      padding: 0 3%;
    font-size: 21px;
    line-height: 30px;
}
    .button-cls {
    background: #fff;
    border-radius: 25px;
}
  }
</style>