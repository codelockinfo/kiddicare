<div class="clsmain-slider-logos-section" id="{{section.id}}">
  <div class="clsContainer-cls">
    <div class="clswidth-cnt">
      <h2 class="clsheading">{{section.settings.heading}}</h2>
      <p class="clstext">{{section.settings.text}}</p>
    </div>
    <div class="clsAll-logos logo-slides">
      {% for block in section.blocks %}
      <div class="clsfirst-logo">
        <div class="clslogo-cls">
          <img class="clsimg-normal" src="{{block.settings.image | img_url: 'master'}}">
          <img class="clsimg-hover" src="{{block.settings.hover | img_url: 'master'}}">
        </div>

      </div>
      {% endfor %}
    </div>
  </div>
</div>



{% schema %}
{
"name": "Logo Slider Section",
"settings": [
{
"id" : "heading",
"type" : "text",
"label" : "Heading"
},
{
"id" : "text",
"type" : "textarea",
"label" : "Text"
},
{
"id" : "color",
"type" : "color",
"label" : "Background Color"
}
],
"blocks" : [
{
"name" : "block",
"type" : "block",
"settings" : [
{
"id" : "image",
"type" : "image_picker",
"label" : "Image"
},
{
"id" : "hover",
"type" : "image_picker",
"label" : "Hover Image"
}
]
}
],
"presets" : [
{
"name" : "Logo Slider Section"
}
]
}
{% endschema %}

<script>

  $('.logo-slides').slick({
    dots: false,
    infinite: true,
    arrows: true,
    slidesToShow: 5,
    autoplay: true,
    autoplaySpeed: 6000,
    slidesToScroll: 1,    
    prevArrow:"<button type='button' class='drag dogarrow1 slick-prev pull-left'><i class='fa fa-long-arrow-left' aria-hidden='true'></i></button>",
    nextArrow:"<button type='button' class='drag dogarrow2  slick-next pull-right'><i class='fa fa-long-arrow-right' aria-hidden='true'></i></button>",
 responsive: [
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1,
        arrows: false,
         dots: true
      }
    },
    {
      breakpoint: 500,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        dots: true
      }
    }
    ]
    });
</script>