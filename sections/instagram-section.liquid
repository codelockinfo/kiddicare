<div class="main-Inastagram-section" id="{{ section.id }}">
  <div class="Insta-sections">
    <heading class="insta">
      <h2 class="heading">{{ section.settings.heading }}</h2>
        <img src="{{ section.settings.image | img_url:'master' }}">
    </heading>
  </div>
</div>

{% schema %}
  {
    "name": "Instagram Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "image",
        "type" : "image_picker",
        "label" : "Image"
      },
      {
        "id" : "background",
        "type" : "color",
        "label" : "Background Color"
      },
      {
        "id" : "text-color",
        "type" : "color",
        "label" : "Text Color",
        "default" : "#fff"
      }
    ],
    "presets" : [
      {
        "name" : "Instagram Section"
      }
    ]
  }
{% endschema %}

<style>

  .Insta-sections{
    background: #006781;
    margin-bottom: 3%;
  }
  heading.insta {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 35px;
}
  .insta h2.heading {
    margin: 0;
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 65px;
    line-height: normal;
    text-align: center;
    color: {{section.settings.text-color}};
}
  .insta img {
    max-width: 60px;
    width: 100%;
    margin: 20px 20px 0;
}
  
</style>