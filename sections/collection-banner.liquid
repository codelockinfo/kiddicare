<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
  .width-cls-cll {
    position: relative;
  }

  .name-coll {
    position: absolute;
    margin-top: 40px;
  }

  #MainContent {
    background: #EDEDED;
  }

  .main-page-cls-col {
    max-width: 1400px;
    margin: auto;
    width: 100%;
  }

  .count {
    color: #737373;
  }

  .yyyyyyyy {
    font-size: 14px;
  }

  .checked {
    color: orange;
  }

  .text {
    width: 50%;
    margin: auto;
  }

  .asdccls_cls_coll {
    width: 24%;
    background: #fff;
    margin: 5px;
    padding-bottom: 2%;
    border-radius: 10px;
    text-align: center;
    overflow: hidden;
  }

  .collection-prd-img {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    /*     justify-content: center; */
  }

  .main-bg-img-col {
    background-image: url({{section.settings.image | img_url:'master'}});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .name-coll a {
    font-family: 'Hunterswood';
    width: 18%;
    border: 1px solid #fff;
    border-radius: 50px;
    text-align: center;
    margin: 1%;
    padding: 0px 10px 10px;
    color: #fff;
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
    line-height: 36px;
  }

  .name-coll {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: center;
  }

  .prd_title {
    padding: 1% 3%;
  }

  .width-cls-cll {
    max-width: 1000px;
    margin: auto;
    width: 100%;
    padding: 8% 3% 9%;
    text-align: center;
  }

  .coll_cls_hd img.main-prd-hover {
    opacity: 0;
    position: absolute;
    width: 80px;
  }

  .asdccls_cls_coll:hover .coll_cls_hd img.main-prd-hover {
    opacity: 1 !important;
  }

  /*   .main-page-cls-col {
  padding: 0 5%;
  background: #EDEDED;
  } */
  .coll_cls_hd img.main-prd-img {
    width: 100%;
  }

  .coll_cls_hd a.cool_img {
    display: flex;
    justify-content: end;
    align-items: end;
  }

  .main-page-cls-col h2.heading {
    padding-top: 5%;
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 50px;
    line-height: 60px;
    color: #006781;
    letter-spacing: 0px;
  }

  .prd_title p.prd-price {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 700;
    font-size: 26px;
    line-height: 35px;
    text-align: center;
    color: #F48F89;
    margin-top: 20px;
  }

  span.kg-title {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 22px;
    text-align: center;
  }

  .prd_title h3.prd-title {
    margin: 0;
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 26px;
    line-height: 35px;
    text-align: center;
    color: #006781;
  }

  .width-cls-cll h2.heading {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 80px;
    line-height: 58px;
    text-align: center;
    color: #006781;
    letter-spacing: 0px;
  }

  .width-cls-cll p.text {
    margin-top: 49px;
    font-family: 'Roboto';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
    text-align: center;
    color: #333333;
  }

  .kg-title {
    color: #333333;
  }

  @media only screen and (max-width: 1280px) {
    .main-page-cls-col {
      max-width: 1100px;
      margin: auto;
      width: 100%;
    }

    .asdccls_cls_coll {
      width: 32%; 
    }

    .name-coll {
      position: absolute;
      margin-top: 20px;
    }
  }
  @media only screen and (max-width: 1024px) {
    .asdccls_cls_coll {
      width: 32%;
      margin:auto; 
      margin-top: 10px;
    }
    .main-page-cls-col {
      max-width: 850px;
  }
  }
  @media(max-width:950px) {
    .asdccls_cls_coll {
      width: 31%;
    }
  }

  @media(max-width:768px) {
    .asdccls_cls_coll {
      width: 48%;
    }

    .name-coll a {
      width: 48%;
    }
    .width-cls-cll {
      padding: 3% 1% 14%;
    }
    .width-cls-cll h2.heading {
      font-size: 40px;
      line-height: 58px;
    }
    .name-coll {
      margin-top: -4px;
    }
    .name-coll a {
      width: 15%;
      font-size: 22px;
      line-height: 36px;
    }
    .width-cls-cll p.text {
      margin-top: 23px;
      margin-bottom: 20px;
    }
    .main-page-cls-col {
      max-width: 600px;
    }
    .main-size table {
      max-width: 600px;
    }
    .main-size td,.main-size th {
      padding: 10px 3px;
      font-size: 18px;
    }
  }

  @media(max-width:749px) {
    .asdccls_cls_coll {
      width: 99%;
    }

    .name-coll a {
      width: 35%;
    }
    .name-coll {
      margin-top: -66px;
  }
    .width-cls-cll {
      padding: 3% 1% 14%;
    }

    .width-cls-cll p.text {
      margin-top: 23px;
      margin-bottom: 93px;
      width: 76%;
  }
  }
</style>



<div class="Main-collections" id="{{section.id}}">
  <div class="collection-cls">
    <div class="Main-Banner-Coll">
      <div class="main-bg-img-col">
        <div class="width-cls-cll">
          <h2 class="heading">{{section.settings.heading}}</h2>
          <p class="text">{{section.settings.text}}</p>
          <div class="name-coll">
            {% for block in section.blocks %}
            {%- assign collection = collections[block.settings.collection] -%}
            <a class="tab" 
              href="{%- if block.settings.collection-link != blank -%}{{block.settings.collection-link}}{%- else -%}{{collection.url}}{%- endif -%}">
              {% if block.settings.collection-tlt != blank %} {{ block.settings.collection-tlt}} {% else
              %}{{collection.title}} {% endif %}</a>
            {% endfor %}
          </div>
        </div>
      </div>

      {% for block in section.blocks %}
      {%- assign collection = collections[block.settings.collection] -%}
      <div class="main-page-cls-col">
        <h2 class="heading">{{ collection.title }} </h2>
        <div class="collection-prd-img">
          {% for product in collection.products %}
          <div class="asdccls_cls_coll">
            {% if product.featured_image != blank %}

            <div class="coll_cls_hd">
              <a href="{{ product.url}}" class="cool_img">
                <img class="main-prd-img" src="{{ product.featured_image | img_url: '200x' }}">
                <img class="main-prd-hover"
                  src="https://cdn.shopify.com/s/files/1/0431/8039/2600/files/Component_8_1.png?v=1655012800">
              </a>
            </div>
            <div class="prd_title">
              <h3 class="prd-title"> {{ product.title }} </h3>
              <div class="yyyyyyyy">
                {% if product.metafields.my_fields.star == 1 %}
                <span class="fa fa-star checked"></span>
                {% elsif product.metafields.my_fields.star == 2 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% elsif product.metafields.my_fields.star == 3 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% elsif product.metafields.my_fields.star == 4 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% elsif product.metafields.my_fields.star == 5 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% endif %}
                {% if product.metafields.my_fields.review_count != blank %}
                <span class="count">({{ product.metafields.my_fields.review_count }} )</span>
                {% endif %}
              </div>

              <span class="kg-title">{{ product.metafields.my_fields.prd_kg}}</span>
              <p class="prd-price"> {{ product.price | money }} </p>
            </div>
            {% endif %}

          </div>
          {% endfor %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>



