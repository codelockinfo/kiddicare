<div class="Grid-sections" id="{{ section.id }}">
  <div class="Grid-logo-sections">
    <header class="head">
      <h2 class="heading">{{ section.settings.heading }}</h2>
    </header>
    <div class="logos-flexs">
      {% for block in section.blocks %}
        <div class="Main-logo">
          <img src="{{ block.settings.image | img_url:'master' }}">
        </div>
        {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Grid Logo Section ",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      }
    ],
    "blocks" : [
      {
        "name" : "block",
        "type" : "block",
        "settings" : [
          {
            "id" : "image",
            "type" : "image_picker",
            "label" : "Image"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Grid Logo Section"
      }
    ]
  }
{% endschema %}

