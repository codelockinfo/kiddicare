    "label": "Image"
   },
      {
    "id" : "komeurl",
    "type" : "url",
    "label" : "month url"
  },
  {
    "id" : "kometag",
    "type" : "text",
    "label" : "month title"
  },
     {
    "id" : "offtitle",
    "type" : "text",
    "label" : "offtitle"
  }
  ]
  }

  ],
  "presets" : [
  {
    "name" : "monthlypackage",
    "category" : "monthlypackage"

    }
  ]
  }
  {% endschema %}