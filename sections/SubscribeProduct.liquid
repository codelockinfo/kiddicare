{% for block in section.blocks %}
  <div class="subscribleflex1">
    
   {% assign product = all_products[block.settings.product] %}
   {% for image in product.images %}
        {% if forloop.first == true %}
        <h3 class="prodtitle">{{product.title}}</h3>      
        <img src="{{ product.images[0] | img_url:'master' }}" class="customproduce"> 

        <select id="product-select" name="id" data-id="{{ 304164943 }}">
{% for variants in product.variants %}   
      {% for option in product.options_with_values %}
<div class="customslide">
       <label >
                          {{ option.name }}
                        </label>
                        <select class="customslider">
                          {% for value in option.values %}
                            <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
                          {% endfor %}
                        </select>
</div>
          {% endfor %}
      {% endfor %}
</select> 
    {% endif %}
  
   {% endfor %}
 </div>
{% endfor %}
