<link rel="canonical" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script> 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="Product-slider-section" id="{{ section.id }}">
  <div class="Slider-Product">
    <header class="head">
      <h2 class="heading">{{ section.settings.heading }}</h2>
    </header>
    <div class="view_more"><a href="{{ section.settings.button_link }}" style="color:{{ section.settings.btn-color }};">{{ section.settings.button_name }}</a></div>
    <div class="Product-slide-cls product-sliders">
      {% for block in section.blocks %}
         {%- assign product = all_products[block.settings.product] -%}
        <div class="Main-product">
          <div class="product-images">
            <img src="{{ product.featured_image | img_url: 'master' }}">
          </div>
          <div class="product-data">
            <h2 class="title">{{ product.title }}</h2>
            <div class="review-rating">
              {% if block.settings.rating == 5 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                {% endif %}
              {% if block.settings.rating == 4 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 3 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 2 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              {% if block.settings.rating == 1 %}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                <span class="fa fa-star "></span>
                {% endif %}
              <span class="review-cls">( {{ block.settings.review }} )</span>
            </div>
            <p class="vendor">{{ product.vendor }}</p>
            <p class="price">{{ product.price |money }}</p>
          </div>
        </div>
        {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Product Slider Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "button_name",
        "type" : "text",
        "label" : "Button"
      },
      {
        "id" : "button_link",
        "type" : "url",
        "label" : "Button Link"
      },
      {
        "id" : "btn-color",
        "type" : "color",
        "label" : "Button Color",
        "default" : "#006781"
      },
      {
        "id" : "background",
        "type" : "color",
        "label" : "Background Color"
      }
    ],
    "blocks" : [
      {
        "name" : "block",
        "type" : "block",
        "settings" : [
          {
            "id" : "product",
            "type" : "product",
            "label" : "Product"
          },
          {
            "type": "range",
            "id": "rating",
            "min": 1,
            "max": 5,
            "step": 1,
            "label": "Rating",
            "default": 5
          },
          {
            "id" : "review",
            "type" : "text",
            "label" : "Review",
            "default" : "22"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Product Slider Section"
      }
    ]
  }
{% endschema %}

<style>
  .Slider-Product{
    max-width: 1200px;
    width: 100%;
    margin: auto;
  }
  .Main-product{
    background: #fff;
    margin: 0 10px;
    padding: 10px 15px;
  }
  .product-data h2.title {
    font-family: 'Hunterswood';
    font-style: normal;
    font-weight: 400;
    font-size: 24px;
    line-height: 29px;
    text-align: center;
    color: #006781;
}
  .product-data p.vendor {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 500;
    font-size: 20px;
    line-height: 25px;
    text-align: center;
    color: #333333;
}
  .product-data p.price {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 500;
    font-size: 30px;
    line-height: 35px;
    color: #F48F89;
    text-align: center;
}
  .view_more a {
    font-family: 'Manrope';
    font-style: normal;
    font-weight: 700;
    font-size: 24px;
    line-height: 29px;
    text-align: center;
    text-transform: capitalize;
    
}
  .view_more {
    margin: 20px;
    text-align: end;
}
  .Product-slider-section .slick-prev:before {
    content: "";
}
  .Product-slider-section .slick-next:before {
    content: "";
}
  .Product-slider-section .slick-prev {
    left: -15px;
    z-index: 9;
}
  .Product-slider-section .slick-next {
    right: 10px;
}
</style>


<script>

  $('.product-sliders').slick({
    dots: false,
    infinite: true,
    arrows: true,
    slidesToShow: 4,
    autoplay: true,
    autoplaySpeed: 6000,
    slidesToScroll: 1,    
    prevArrow:"<button type='button' class='drag dogarrow1 slick-prev pull-left'><i class='fa fa-long-arrow-left' aria-hidden='true'></i></button>",
    nextArrow:"<button type='button' class='drag dogarrow2  slick-next pull-right'><i class='fa fa-long-arrow-right' aria-hidden='true'></i></button>",
 responsive: [
    {
      breakpoint: 768,
      settings: {
        arrows: true,
        dots: true,
        slidesToShow: 2,
        slidesToScroll: 1,
      }
    },
    {
      breakpoint: 500,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        dots: true
      }
    }
    ]
    });
</script>